<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AyeshaNaeemCatering" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AyeshaNaeemCatering.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AyeshaNaeemCatering.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AyeshaNaeemCatering.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextAppearance.H1Bold" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_theme_heading_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
    </style>

    <style name="AppTheme.TextAppearance.H2Medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/app_theme_heading_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
    </style>

    <style name="AppTheme.TextAppearance.BodyMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/app_theme_body_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
    </style>

    <style name="AppTheme.TextAppearance.BodyLight" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/app_theme_body_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/gotham_light</item>
    </style>

    <style name="AppTheme.TextAppearance.H1Bold.Dark" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_theme_heading_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
    </style>
</resources>